load("@rules_rust//rust:defs.bzl", "rust_doc", "rust_doc_test", "rust_library")

rust_library(
    name = "message_shared",
    srcs = glob([
        "src/**",
    ]),
    crate_root = "src/lib.rs",
    proc_macro_deps = [
        "//thirdparty/crates:trait-variant",
    ],
    tags = [
        "infra",
        "message_bus",
        "message_consumer",
    ],
    visibility = ["//visibility:public"],
    deps = [
        # Internal crates
        "//alias:common_message",
        # External crates
        "//thirdparty/crates:ahash",
        "//thirdparty/crates:iggy",
        "//thirdparty/crates:tokio",
    ],
)

rust_doc(
    name = "doc",
    crate = ":message_shared",
    tags = ["doc"],
    visibility = ["//visibility:public"],
)

rust_doc_test(
    name = "doc_test",
    crate = ":message_shared",
    tags = ["doc-test"],
    visibility = ["//visibility:public"],
)
